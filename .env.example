# Copy this file to .env.local during development and set values as needed.
# Do NOT commit your .env.local file to source control.

# Set the environment to 'local' during development so the script can
# enable local-friendly settings (like skipping TLS verification for
# self-signed devices). On the production server set APP_ENV=production
# or leave unset.
APP_ENV=local

# API base URL (example)
API_BASE=http://device.local/api/

# Storage directory (relative or absolute)
STORAGE_DIR=./storage
